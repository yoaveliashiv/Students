<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/textView_date_blocked"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="משתמש זה  מחק את החשבון או חסום"
        android:textColor="@color/colorWarng"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_close_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="סגור חלון"
        app:layout_constraintEnd_toEndOf="@+id/textView_date_blocked"
        app:layout_constraintStart_toStartOf="@+id/textView_date_blocked"
        app:layout_constraintTop_toBottomOf="@+id/textView_date_blocked" />
</androidx.constraintlayout.widget.ConstraintLayout>