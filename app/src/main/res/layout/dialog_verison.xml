<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/textView_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="יש גרסא חדשה"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_close"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="55dp"
        android:text="לחץ לעדכון גרסא"
        app:layout_constraintEnd_toEndOf="@+id/textView_text"
        app:layout_constraintStart_toStartOf="@+id/textView_text"
        app:layout_constraintTop_toBottomOf="@+id/textView_text" />
</androidx.constraintlayout.widget.ConstraintLayout>