<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:fillViewport="true"
    tools:context=".CardList">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/colorAccent"
            tools:context=".CardList">

                <ImageView
                    android:id="@+id/imageViewListCard"
                    android:layout_width="130dp"
                    android:layout_height="80dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/student_icon" />

                <TextView
                    android:id="@+id/priceDayListCard"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:text="מחיר ליום: 9999"
                    android:textColor="#100F0F"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/typeCarListCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:text="אריאל בן נעים"
                    android:textColor="#100F0F"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewListCard" />

                <TextView
                    android:id="@+id/phoneListCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="0544540185"
                    android:textColor="#100F0F"
                    app:layout_constraintEnd_toEndOf="@+id/typeCarListCard"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/typeCarListCard"
                    app:layout_constraintTop_toBottomOf="@+id/typeCarListCard" />

                <TextView
                    android:id="@+id/remarksListCard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="לא משכיר פחות משלושה ימים"
                    android:textColor="#100F0F"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priceDayListCard" />

                <TextView
                    android:id="@+id/areaListCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:text="איזור חיפה"
                    android:textColor="#100F0F"
                    app:layout_constraintEnd_toStartOf="@+id/priceDayListCard"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewPermission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ממתין לאישור"
                    android:textColor="#D82323"
                    android:textSize="40dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageViewListCard"
                    app:layout_constraintTop_toTopOf="@+id/areaListCard" />

                <TextView
                    android:id="@+id/textViewSeeMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="1999"
                    android:textColor="#FF3D00"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/typeCarListCard"
                    app:layout_constraintStart_toEndOf="@+id/typeCarListCard"
                    app:layout_constraintTop_toTopOf="@+id/typeCarListCard" />

                <ImageView
                    android:id="@+id/imageViewSee"
                    android:layout_width="9dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="1dp"
                    android:src="@mipmap/ic_eye_icon"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewSeeMe"
                    app:layout_constraintEnd_toStartOf="@+id/textViewSeeMe"
                    app:layout_constraintTop_toTopOf="@+id/textViewSeeMe"
                    app:layout_constraintVertical_bias="0.0" />

                <ListView
                    android:id="@+id/listViewExpertise"
                    android:layout_width="250dp"

                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/remarksListCard" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>