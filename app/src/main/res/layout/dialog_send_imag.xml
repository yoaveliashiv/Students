<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="385dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <Button
        android:id="@+id/button_send_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="74dp"
        android:text="שלח תמונה"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <ImageView
        android:id="@+id/imageButton_change_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="77dp"
        android:text="יש ללחוץ על התמונה כדי לבחור תמונה חדשה"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_change_image"
        app:layout_constraintStart_toStartOf="@+id/imageButton_change_image"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_change_image" />

    <Button
        android:id="@+id/button_exsit"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ביטול"
        app:layout_constraintEnd_toEndOf="@+id/button_send_image"
        app:layout_constraintStart_toStartOf="@+id/button_send_image"
        app:layout_constraintTop_toBottomOf="@+id/button_send_image" />
</androidx.constraintlayout.widget.ConstraintLayout>